<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragments.WelcomeFragment"
    android:background="?background_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:background="@drawable/gradient_drawable"
        android:orientation="vertical">

        <View
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="147dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/logo" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?background_content">

        <Button
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:background="@drawable/custom_button_outline"
            android:padding="16dp"
            android:textColor="#FFDF6590"
            android:text="@string/login_btn" />

        <Button
            android:id="@+id/registry"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:background="@drawable/custom_button_filled"
            android:text="@string/registration"
            android:padding="16dp"
            android:textColor="@color/white"
            />

    </RelativeLayout>
</LinearLayout>